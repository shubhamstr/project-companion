{
  "name": "project-companion",
  "displayName": "Project Companion",
  "description": "Project-level bookmarks, notes and tasks",
  "version": "0.0.3",
  "publisher": "shubhamstr",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-companion.helloWorld",
        "title": "Project Companion: Hello World"
      },
      {
        "command": "project-companion.addBookmark",
        "title": "Project Companion: Add Bookmark"
      },
      {
        "command": "project-companion.jumpToBookmark",
        "title": "Project Companion: Jump to Bookmark"
      },
      {
        "command": "project-companion.notes.add",
        "title": "Project Companion: Add Note"
      },
      {
        "command": "project-companion.notes.open",
        "title": "Open Project Note"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "project-companion",
          "title": "Project Companion",
          "icon": "resources/project-companion.svg"
        }
      ]
    },
    "views": {
      "project-companion": [
        {
          "id": "project-companion.bookmarks",
          "name": "Bookmarks",
          "icon": "resources/bookmarks.svg"
        },
        {
          "id": "project-companion.notes",
          "name": "Project Notes",
          "icon": "resources/notes.svg"
        }
      ]
    },
    "keybindings": [
      {
        "command": "project-companion.addBookmark",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "project-companion.notes.add",
          "when": "view == project-companion.notes",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "project-companion.notes.open",
          "when": "view == project-companion.notes",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
